@{
	ViewBag.Title = "Edit Person";
}
@model PersonUpdateRequest


<a class="link-hover" href="~/Person/index">Go Back to Persons List</a>

<h1>Edit Person</h1>
<div class="w-50">
    <form asp-controller="Person" asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-red"></div>

		<input type="hidden" asp-for="Id" />
        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="Name" class="form-label pt"></label>
            </div>
            <div class="flex-1">
                <input asp-for="Name" class="form-input"/>
                <span asp-validation-for="Name" class="text-red"></span>
            </div>
        </div>

        <div class="flex form-field">
            <div class="w-25">
                <label asp-for="Email" class="form-label"></label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" />
                <span asp-validation-for="Email" class="text-red"></span>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label asp-for="DateOfBirth" class="form-label pt"></label>
            </div>
            <div class="flex-1">
                <input asp-for="DateOfBirth" class="form-input" />
                <span asp-validation-for="DateOfBirth" class="text-red"></span>
            </div>
        </div>

        <div class="flex form-field">
            <div class="w-25">
                <label asp-for="Gender" class="form-label pt"></label>
            </div>
            <div class="flex-1">
                @{
                    string[] genderList = Enum.GetNames(typeof(GenderOptions));
                }
                @foreach (string gender in genderList)
                {
                    <label for="@gender">@gender</label>
                    <input type="radio" asp-for="Gender" value="@gender" />
                }
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div class="flex form-field">
            <div class="w-25">
                <label asp-for="CountryId" class="form-label pt"></label>
            </div>
            <div class="flex-1">
                <select asp-for="CountryId" class="form-input" asp-items="@(ViewBag.Countries as IEnumerable<SelectListItem> ?? new List<SelectListItem>())">
                    <option value="">Select country</option>
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
        </div>
  
        <div class="flex form-field">
            <div class="w-25">
                <label asp-for="Address" class="form-label"></label>
            </div>
            <div class="flex-1">
                <input asp-for="Address" class="form-input" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="flex form-field">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <label asp-for="ReceiveNewsLetters" class="form-label pt"></label>
                <input asp-for="ReceiveNewsLetters" type="checkbox" />
                <span asp-validation-for="ReceiveNewsLetters" class="text-red"></span>
            </div>
        </div>

        <div class="flex form-field">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <input type="submit" value="Update" class="button button-green-back" />
            </div>
        </div>

        @* <div asp-validation-summary="All">  </div> *@
        @if (ViewBag.Errors != null)
        {
            <ul class="text-red">
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        }
    </form>
</div>
@section Scripts {
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" </script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js"></script>
}